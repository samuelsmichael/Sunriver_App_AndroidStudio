<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
	android:background="@drawable/back"  
	android:paddingBottom="15dp"
>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Alert"
        android:textColor="#8F3302"
        android:textSize="30sp"
        android:textStyle="bold"
    />

	<View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
	    android:layout_marginTop="5dp"
	    android:layout_height="3dp"
	    android:layout_below="@+id/textView1"
	    android:background="#8F3302"/>    
    
    <TextView
        android:id="@+id/alertTitle"
        android:layout_below="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#8F3302"
        android:textSize="22sp"
/>

    	<View
    	android:id="@+id/view2"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="5dp"
	    android:layout_height="3dp"
	    android:layout_below="@+id/alertTitle"
	    android:background="#8F3302"/>    
    
    <TextView
        android:id="@+id/alertDescription"
        android:layout_below="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#8F3302"
        android:textSize="14sp"
        android:paddingLeft="19dip"
        android:paddingRight="19dip"
        android:layout_marginTop="11dp"
 />

    <Button
        android:id="@+id/alertCloseButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/alertDescription"
        android:background="#CD6A65"
        android:textColor="#FFFFFF"
        android:layout_marginTop="11dp"
        android:text="Close" />

	</RelativeLayout>
