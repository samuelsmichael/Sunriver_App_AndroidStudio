<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dp"
	>
    <LinearLayout android:id="@+id/hospitalitydetail_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal">
    
		    <LinearLayout android:id="@+id/hospitalitydetail_image_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal">
		 
		        <ImageView
		            android:id="@+id/hospitalitydetail_image"
		            android:contentDescription=""
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="0dp"
		            
		            />
		 
		    </LinearLayout>
		    <LinearLayout android:id="@+id/hospitality_titleandfavorite"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"	    
			    android:layout_gravity="center_horizontal"
		 	 >		  		    
				    <TextView 
						android:id="@+id/hospitalitydetail_name"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content" 
						android:layout_gravity="center_horizontal"
						android:textSize="26sp" 
						android:textColor="#000000"
					></TextView>
		    	</LinearLayout>
		    <TextView 
				android:id="@+id/hospitalitydetail_address"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_gravity="center_horizontal"
				android:textSize="16sp" 
				android:linksClickable="false"		
				android:textColor="#111111"
				></TextView>
		    <TextView 
				android:id="@+id/hospitalitydetail_phone"
				android:autoLink="phone"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_gravity="center_horizontal"
				android:textSize="16sp" 
				android:textColor="#111111"
				></TextView>
		    		    <ScrollView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        
		        >
			    <TextView 
					android:id="@+id/hospitalitydetail_description"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:textSize="16sp" 
					android:maxLines = "11"
					android:layout_marginTop="16dp"
					android:layout_marginBottom="12dp"
					android:scrollbars = "vertical"
					android:textColor="#111111"
				></TextView>
			</ScrollView>
    </LinearLayout>
    <LinearLayout android:id="@+id/hospitalitydetail_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
    
	       <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#ffffff"
		    >
	    	<TextView 
				android:id="@+id/hospitalitydetail_soundurl"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:textSize="16sp" 
				android:textColor="#111111"
				android:layout_centerInParent="true"
				android:layout_marginBottom="5dip"
			></TextView>        
			<TextView 
				android:id="@+id/hospitalitydetail_weburl"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:linksClickable="true"
				android:textSize="16sp" 
				android:textColor="#ff0000cd"
				android:text="@string/visit_the_web_link"
				android:layout_centerInParent="true"
				android:layout_marginRight="5dp"
	
				
			></TextView>
		</RelativeLayout>        
	    
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	       	android:layout_gravity="center_horizontal"
	        >	
	    
	        <LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:layout_centerHorizontal="true"
				>
			        <Button
				        android:id="@+id/hospitalitydetailsOnMap"
				        style="?android:attr/buttonStyleSmall"
				        android:textColor="#222222"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="15dp"
				        android:text="Map" 
				     />
			    	<ImageView 
				        android:id="@+id/ibtn_hospitality_favorite"
				        android:contentDescription="Favorite"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal|center_vertical"
				        android:layout_marginLeft="10dp"
				        android:layout_marginRight="25dp"
				        />
			        	            
			        <Button
				        android:id="@+id/hospitalitydetailshare"
				        style="?android:attr/buttonStyleSmall"
				        android:textColor="#222222"
				        android:layout_width="wrap_content"			        
				        android:layout_height="wrap_content"
				        android:text="Share" 
				     />
			</LinearLayout>        	    
	        
	    </RelativeLayout>
	</LinearLayout>	   		    
	    
</RelativeLayout>

