<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Weather2" >

    <LinearLayout 
        android:id="@+id/weather_headings"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <TextView
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:text="Right Now"
	        android:textSize="20sp"
	        android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="Today"
	        android:gravity="center_horizontal"
	        android:textSize="20sp"
	        android:textStyle="bold"
            />
         	<TextView
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="Tonight"
	        android:gravity="center_horizontal"
	        android:textSize="20sp"
	        android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/weather_icons"        
        android:layout_below="@+id/weather_headings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_rightnow"
            android:layout_width="50dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="50dip" />
        <ImageView
            android:id="@+id/image_today"
            android:layout_width="50dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="50dip" />
         <ImageView
            android:id="@+id/image_tonight"
            android:layout_width="50dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="50dip" />
        </LinearLayout>
        
    <LinearLayout 
        android:id="@+id/weather_descriptions"
        android:layout_below="@+id/weather_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/descriptions_rightnow"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="17sp"
	        android:textStyle="bold"
            />
        <TextView
            android:id="@+id/descriptions_today"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="17sp"
	        android:textStyle="bold"
            />
        <TextView
            android:id="@+id/descriptions_tonight"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="17sp"
	        android:textStyle="bold"
            />
     </LinearLayout>
     <LinearLayout 
         android:layout_marginBottom="8sp"
        android:id="@+id/weather_precipitation"
        android:layout_below="@+id/weather_descriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
         	<TextView
            android:id="@+id/precipitation_rightnow"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="12sp"
            />
         	<TextView
            android:id="@+id/precipitation_today"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="12sp"
            />
         	<TextView
            android:id="@+id/precipitation_tonight"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="12sp"
            />         		
     </LinearLayout>
     <LinearLayout 
         android:layout_marginBottom="8sp"
        android:id="@+id/weather_temperatures"
        android:layout_below="@+id/weather_precipitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
         	<TextView
            android:id="@+id/temp_rightnow"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="18sp"
	        android:textStyle="bold"
            />
         	<TextView
            android:id="@+id/temp_today"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="18sp"
	        android:textStyle="bold"
            />
         	<TextView
            android:id="@+id/temp_tonight"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="18sp"
	        android:textStyle="bold"

            />
     </LinearLayout>
     <LinearLayout 
        android:id="@+id/weather_verbiage_under_temperatures"
        android:layout_below="@+id/weather_temperatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8sp"
        >
         	<TextView
            android:id="@+id/verbiage_rightnow"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="12sp"

            />
         	<TextView
            android:id="@+id/verbiage_today"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:text="High"
	        android:textSize="12sp"
            />
         	<TextView
            android:id="@+id/verbiage_tonight"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:text="Low"
	        android:textSize="12sp"

            />
     </LinearLayout>
     <LinearLayout 
        android:id="@+id/weather_threeday"
        android:layout_below="@+id/weather_verbiage_under_temperatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >      
        <TextView
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginBottom="10sp"
	        android:layout_marginTop="20sp"
	        android:text="Three Day"
	        android:gravity="center_horizontal"
	        android:textSize="20sp"
	        android:textStyle="bold"
            />        
     
     </LinearLayout>
     
     <LinearLayout 
        android:id="@+id/weather_three_day"
        android:layout_below="@+id/weather_threeday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="9sp"
        android:orientation="horizontal"
        >
	     <LinearLayout 
	        android:id="@+id/weather_day_one"
	        android:layout_width="100dp"
	        android:layout_height="200dp"
	        android:padding="6sp"
            android:background="#d0d0d0"  
            android:layout_marginRight="5dp"
	        android:orientation="vertical"
	        >
	        	<TextView
	        	    android:id="@+id/weather_day_one_dayname"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="19sp"
			        android:textStyle="bold"
	            />  
	        	<TextView
	        	    android:id="@+id/weather_day_one_monthday"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  
                <ImageView
		            android:id="@+id/image_day_one"
		            android:layout_width="50dip"
		            android:layout_weight="1"
		            android:gravity="center_horizontal"
		            android:layout_gravity="center_horizontal"
		            android:layout_height="50dip" />
	        	<TextView
	        	    android:id="@+id/weather_day_one_hilo"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  
	        	<TextView
	        	    android:id="@+id/weather_day_one_verbiage"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  
	        	
             </LinearLayout>
	     <LinearLayout 
	        android:id="@+id/weather_day_two"
	        android:padding="6sp"
	        android:layout_width="100dp"
	        android:layout_height="200dp"
	        android:orientation="vertical"
	        android:layout_marginRight="5dp"
	        android:background="#d0d0d0"
	        >
	        	
	        	<TextView
	        	    android:id="@+id/weather_day_two_dayname"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="19sp"
			        android:textStyle="bold"
	            />  
	        	<TextView
	        	    android:id="@+id/weather_day_two_monthday"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  
                <ImageView
		            android:id="@+id/image_day_two"
		            android:layout_width="50dip"
		            android:layout_weight="1"
		            android:gravity="center_horizontal"
		            		            android:layout_gravity="center_horizontal"
		            
		            android:layout_height="50dip" />
	        	<TextView
	        	    android:id="@+id/weather_day_two_hilo"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  
	        	<TextView
	        	    android:id="@+id/weather_day_two_verbiage"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  	         
	         
	     </LinearLayout>
	     <LinearLayout 
	        android:id="@+id/weather_day_three"
	        android:layout_width="100dp"
	        android:layout_height="200dp"
	        android:padding="6sp"
	        android:orientation="vertical"
	        android:layout_marginRight="5dp"
	        android:background="#d0d0d0"
	        >
	        	<TextView
	        	    android:id="@+id/weather_day_three_dayname"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="19sp"
			        android:textStyle="bold"
	            />  
	        	<TextView
	        	    android:id="@+id/weather_day_three_monthday"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  
                <ImageView
		            android:id="@+id/image_day_three"
		            android:layout_width="50dip"
		            android:layout_weight="1"
		            android:gravity="center_horizontal"
		            		            android:layout_gravity="center_horizontal"
		            
		            android:layout_height="50dip" />
	        	<TextView
	        	    android:id="@+id/weather_day_three_hilo"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  
	        	<TextView
	        	    android:id="@+id/weather_day_three_verbiage"
		            android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:textSize="14sp"
			        android:textStyle="bold"
	            />  	        	
	      </LinearLayout>
	     
     </LinearLayout>
</RelativeLayout>
