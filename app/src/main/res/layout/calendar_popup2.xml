<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bg_2"
    android:orientation="vertical" >
    
    <LinearLayout 
	    android:id="@+id/calendar_popup_heading_area1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#aaaaaa"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal"	    
		>
		<ImageView
           android:id="@+id/calendar_popup_image"
           android:layout_width="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_height="wrap_content"
           android:layout_marginLeft="3dp"
           android:layout_marginRight="8dip"
           />
		<LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
		   <TextView 
				android:id="@+id/calendar_popup_name"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:textSize="26sp" 
				android:textStyle="bold"
				android:textColor="#FFFFFF"
			></TextView>	 
		   <TextView 
				android:id="@+id/calendar_popup_date_and_duration"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:textSize="18sp" 
				android:textColor="#FFFFFF"
			></TextView>	 		 
           	<ImageView 
			        android:id="@+id/ibtn_calendar_favorite"
			        android:contentDescription="Favorite"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="centerCrop"
			        android:layout_marginLeft="10dip"
			        />
       </LinearLayout>
       		
	</LinearLayout>
	<RelativeLayout 
	    android:id="@+id/calendar_popup_heading_area2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#aaaaaa"
	    android:layout_gravity="center_horizontal"
	    android:orientation="horizontal"
	    android:padding="2dip"
	    android:layout_marginBottom="4dip"
		>
       <Button
           android:id="@+id/calendar_popup_share_button"
           android:layout_height="38dip"
           android:layout_width="65dip"
           android:textSize="11sp"
           android:background="@drawable/rounded_edittext_darkgrey_background"
           android:text="Share"
       	   android:layout_alignBaseline="@+id/calendar_popup_address"           
           android:layout_alignParentLeft="true"
           android:gravity="center_vertical|center_horizontal"
           android:textColor="#ffffff"
           android:drawableLeft="@drawable/ic_action_share"
           android:layout_marginLeft="2dip"
       />
       <TextView
			android:id="@+id/calendar_popup_address"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:padding="4dip"
            android:layout_marginTop="6dip"
            android:layout_toRightOf="@+id/calendar_popup_share_button"
		/>
       <Button
           android:id="@+id/calendar_popup_map_button"
           android:layout_height="38dip"
           android:layout_width="65dip"
           android:textSize="11sp"
           android:layout_marginTop="6dip"
           android:textColor="#ffffff"
           android:background="@drawable/rounded_edittext_darkgrey_background"
           android:text="Map"
       	   android:layout_toRightOf="@+id/calendar_popup_address"
       	   android:layout_below="@+id/calendar_popup_share_button"
       	   android:layout_alignParentLeft="true"
       	   android:layout_marginLeft="2dip" />
       </RelativeLayout>	    
			
	<LinearLayout
        android:id="@+id/calendar_popup_body_area"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="9dip"
	    android:background="#f0f0f0"
	    android:orientation="vertical" >
        >
       <TextView
			android:id="@+id/calendar_popup_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		/>        
		<LinearLayout
	        android:id="@+id/calendar_popup_body_area2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#f0f0f0"
		    android:layout_marginTop="4dip"
		    android:orientation="horizontal" >
	        >
	       <TextView
				android:id="@+id/calendar_popup_for_more_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="For more information, "
				android:layout_marginRight="4dp"
			/>        
			<TextView 
				android:id="@+id/calendar_popup_weburl"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:linksClickable="true"
				android:textSize="16sp" 
		        android:textColor="#812622"
				android:text="@string/visit_the_web_link_lowercase"
				android:layout_marginRight="5dp"
				
			></TextView>			
		</LinearLayout>
     </LinearLayout>
	
    
    <Button
       android:id="@+id/closePopup"
       android:textColor="#eeeeee"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:text="@string/location_popup_close_button" 
    />
	        	
</LinearLayout>
