<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip"
    android:paddingLeft="9dip" >
 
    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout android:id="@+id/promotedeventcategoriesthumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="3dip"
        android:layout_centerVertical="true"
        android:background="@drawable/image_bg" >
 
        <ImageView
            android:id="@+id/promotedeventcategorieslist_image"
            android:layout_width="50dip"
            android:layout_height="50dip" />
 
    </LinearLayout>
    
	<LinearLayout    
        android:id="@+id/promotedeventcategoriesrightblock"
        android:layout_toRightOf="@+id/promotedeventcategoriesthumbnail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="13dip"
        android:orientation="horizontal" >		    
        
	    <!-- Name -->
	    <TextView
	        android:id="@+id/promotedeventcategoriescategory_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#111111"
	        android:typeface="sans"
	        android:textSize="22sp"
	        android:textStyle="bold"/>
	
	  </LinearLayout>
	  
	<!-- Rightend Arrow -->
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <!-- Dummy spacer -->
    <TextView
        android:id="@+id/dummy_spacer"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:text=" "
		 />
    	    
	     
</RelativeLayout>
