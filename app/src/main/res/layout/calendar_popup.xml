<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
	<LinearLayout 
	    android:id="@+id/calendar_popup_heading_area1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="#cccccc"
	    android:layout_centerHorizontal="true"
	    android:orientation="horizontal"
		>
       <ImageView
           android:id="@+id/calendar_popup_image"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="0dp"
           
           />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
		   <TextView 
				android:id="@+id/calendar_popup_name"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:textSize="26sp" 
				android:textStyle="bold"
				
				android:text="Sunriver Chill Out"
				
				android:textColor="#333333"
			></TextView>	 
		   <TextView 
				android:id="@+id/calendar_popup_date_and_duration"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:textSize="18sp" 
				
				android:text="Sunriver Chill Out"
				
				android:textColor="#333333"
			></TextView>	 		 
           
       </LinearLayout>
       
       
	</LinearLayout>	    
	<RelativeLayout 
	    android:id="@+id/calendar_popup_heading_area2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="#cccccc"
	    android:layout_centerHorizontal="true"
	    android:orientation="horizontal"
		>
       <Button
           android:id="@+id/calendar_popup_share_button"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:background="@drawable/rounded_edittext"
           android:width="44sp"
           android:text="Share"
           android:layout_alignParentBottom="true"
           android:drawableLeft="@drawable/ic_action_share" />
       <TextView
			android:id="@+id/calendar_popup_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/calendar_popup_share_button"
            android:layout_alignParentTop="true"
		/>
       <Button
           android:id="@+id/calendar_popup_map_button"
           android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/calendar_popup_address"
           android:layout_width="wrap_content"
           android:width="44sp"
           android:background="@drawable/rounded_edittext"
           android:text="Map"
           android:layout_alignParentBottom="true" />
       </RelativeLayout>	    
    <LinearLayout
        android:id="@+id/calendar_popup_body_area1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="#f0f0f0"
	    android:layout_centerHorizontal="true"
	    android:orientation="vertical" >
        >
       <TextView
			android:id="@+id/calendar_popup_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		/>        
		<LinearLayout
	        android:id="@+id/calendar_popup_body_area2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#f0f0f0"
		    android:layout_centerHorizontal="true"
		    android:orientation="vertical" >
	        >
	       <TextView
				android:id="@+id/calendar_popup_for_more_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="For more information, visit"
				android:layout_marginRight="4dp"
			/>        
			<TextView 
				android:id="@+id/calendar_popup_weburl"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:linksClickable="true"
				android:textSize="16sp" 
		        android:textColor="#812622"
				android:text="@string/visit_the_web_link"
				android:layout_alignParentRight="true"
				android:layout_marginRight="5dp"
				
			></TextView>			
		</LinearLayout>
     </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       	android:layout_gravity="center_horizontal"
        >	
    
        <Button
	        android:id="@+id/closePopup"
	        style="?android:attr/buttonStyleSmall"
	        android:textColor="#dddddd"
	        android:layout_width="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_height="wrap_content"
	        android:text="@string/location_popup_close_button" 
	     />
	    
        
    </RelativeLayout>    
</LinearLayout>
