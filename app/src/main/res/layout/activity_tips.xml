<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:layout_margin="25dip"
	    android:background="@drawable/blackframe"
    >
	 <android.support.v4.view.ViewPager
	    android:id="@+id/pager"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:layout_above="@+id/tipsLinLayId"
	    />
	 <LinearLayout android:id="@+id/tipsLinLayId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"
	     >
	     	<CheckBox android:id="@+id/cbTipsId"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:text="Show tips at startup"
			    android:textSize="12sp"
			    android:textColor="#888888"
			    android:layout_weight=".5"
	     	    ></CheckBox>
			 <Button android:id="@+id/TipsBtnId"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:text="Close"
			    android:layout_weight=".5"
		     ></Button>
	</LinearLayout>   
</RelativeLayout>



